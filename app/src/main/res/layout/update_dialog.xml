<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="394dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etSevti"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="Service Title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSevNic"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="NIC"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSevAge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="Age"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSevGen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="Gender"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSevAddr"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:hint="Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etHourAge"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Hourly Rate" />

    <EditText
        android:id="@+id/etAva"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Avalibility"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Update Data" />


</LinearLayout>