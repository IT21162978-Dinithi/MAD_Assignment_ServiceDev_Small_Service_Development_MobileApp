<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listsev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:hint="Painter"
            android:padding="10dp"
            android:textColor="#330409"
            android:textColorHint="#330409"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:text="Age"
                android:textColor="#2D4940"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="35"
                android:padding="10dp"
                android:textColor="#4C5345"
                android:textColorHint="#45554B"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gen"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:hint="Age"
                android:padding="10dp"
                android:text="Gender"
                android:textColor="#4C5345"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/segender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Male"
                android:padding="10dp"
                android:textColor="#4C5345"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hr"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:hint="Age"
                android:padding="10dp"
                android:text="Hourly Rate"
                android:textColor="#4C5345"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sehr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="2000.00"
                android:padding="10dp"
                android:textColor="#4C5345"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ava"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:hint="Age"
                android:padding="10dp"
                android:text="Availability"
                android:textColor="#4C5345"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seAva"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:hint="yes"
                android:padding="10dp"
                android:textColor="#4C5345"
                android:textSize="22sp" />

        </LinearLayout>

        <Button
            android:id="@+id/savebtn"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:backgroundTint="#680B20"
            android:text="Saved"
            android:textColor="#FEFEFE" />

    </LinearLayout>
</androidx.cardview.widget.CardView>