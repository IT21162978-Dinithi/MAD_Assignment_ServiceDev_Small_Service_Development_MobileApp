<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listsev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"

    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <TextView
                android:id="@+id/seTitle"
                android:layout_width="216dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:hint="Painter"
                android:textColor="#4A032A"
                android:textColorHint="#4A032A"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Name"
                android:textColor="#E16E6D71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="sahan"
                android:padding="3dp"
                android:textColor="#4C5345"
                android:textColorHint="#45554B"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Age"
                android:textColor="#E16E6D71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seAge"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="35"
                android:padding="3dp"
                android:textColor="#4C5345"
                android:textColorHint="#45554B"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gen"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:padding="3dp"
                android:text="Gender"
                android:textColor="#E16E6D71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/segender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Male"
                android:padding="3dp"
                android:textColor="#4C5345"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hr"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:padding="3dp"
                android:text="Hourly Rate"
                android:textColor="#E16E6D71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sehr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2000.00"
                android:padding="3dp"
                android:textColor="#4C5345"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ava"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:padding="3dp"
                android:text="Availability"
                android:textColor="#E16E6D71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seAva"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:hint="yes"
                android:padding="3dp"
                android:textColor="#4C5345"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>